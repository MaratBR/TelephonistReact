# Generated by confd {{datetime}}
# Default configuration for Telephonist proxy server

upstream api-upstream {
    server {{ getv "/api/server" }};
}

server {
    listen       80;
    listen  [::]:80;
    server_name  {{getv "/nginx/server/name"}};

{{if exists "/ssl"}}
    ssl_certificate     {{getv "/ssl/certificate"}};
    ssl_certificate_key {{getv "/ssl/key"}};
    ssl_protocols       {{getv "/ssl/protocols" "TLSv1 TLSv1.1 TLSv1.2"}};
    ssl_ciphers         {{getv "/ssl/ciphers" "HIGH:!aNULL:!MD5"}};
{{end}}

    location /api/_ws/ {
		proxy_http_version 1.1;
		proxy_set_header Host $http_host;
		proxy_set_header X-Real-IP        $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;

		proxy_redirect off;
		proxy_buffering off;
		keepalive_timeout 90s;
		proxy_connect_timeout 10s;
		proxy_read_timeout 30s;
		proxy_send_timeout 30s;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "Upgrade";

    {{if exists "/api/usessl"}}
        proxy_pass https://api-upstream/api/_ws/;
    {{else}}
        proxy_pass http://api-upstream/api/_ws/;
    {{end}}
	}

	location /api/ {
		proxy_http_version 1.1;
		proxy_set_header Host $http_host;
		proxy_set_header X-Real-IP        $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;

		if ($request_method = OPTIONS ) {
			return 200;
		}

    {{if exists "/api/usessl"}}
        proxy_pass httdops://api-upstream/api/;
    {{else}}
        proxy_pass http://api-upstream/api/;
    {{end}}
    }
    
    location / {
        root   /dist;
        try_files $uri $uri/ /index.html;
    }
}

